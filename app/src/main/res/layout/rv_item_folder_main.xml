    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/red"
    app:cardBackgroundColor="@color/grey"
    android:layout_marginStart="8dp"
    android:id="@+id/card">

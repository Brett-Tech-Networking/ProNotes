<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:alwaysRetainTaskState="true"
    tools:context=".NotesTakerActivity"
    >
<Toolbar
    android:id="@+id/toolbar_notes"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:padding="0dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_save"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/ic_save" />

         <!--For back button-->
        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:padding="9dp"
            android:src="@drawable/ic_back"
            android:visibility="visible" />
    </RelativeLayout>
</Toolbar>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:clickable="false"
        android:allowClickWhenDisabled="false"
        android:background="@drawable/background_miscellaneous"
        >
        <ImageButton
            android:id="@+id/boldbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tooltipText="Bold Button"
            android:clickable="false"
            android:src="@drawable/ic_bold"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_miscellaneous"
            android:focusable="true"
            android:onClick="@null">
        </ImageButton>

        <ImageButton
            android:id="@+id/italicbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tooltipText="Italic Button"
            android:clickable="true"
            android:src="@drawable/ic_italic"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_miscellaneous"
            android:layout_marginStart="6dp"
            android:focusable="true">
        </ImageButton>

        <ImageButton
            android:id="@+id/underlinebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tooltipText="Underline Button"
            android:clickable="true"
            android:src="@drawable/ic_underlined"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_miscellaneous"
            android:layout_marginStart="6dp"
            android:focusable="true">
        </ImageButton>
    </Toolbar>

    <EditText
        android:id="@+id/editText_title"
        android:hint="@string/title"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/white"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editText_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@null"
        android:hint="@string/add_notes"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/editText_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/editNoteIndicator"
        android:layout_width="10dp"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/note_indicator"
        app:layout_constraintBottom_toBottomOf="@id/editText_notes"
        app:layout_constraintStart_toStartOf="@id/editText_notes"
        app:layout_constraintTop_toTopOf="@id/editText_notes" />

    <TextView
        android:id="@+id/textView_EditNotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/brett_tech_networking_2023"
        android:textColor="@color/white"
        android:textAlignment="center"
        >
    </TextView>
    <include layout="@layout/layout_miscellaneous"/>
</LinearLayout>


